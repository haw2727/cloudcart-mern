{
  "name": "cloudcart-mern",
  "version": "1.0.0",
  "description": "CloudCart MERN Stack E-commerce",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
